{
  "model": "Qwen/Qwen3-1.7B",
  "backend": "mlx",
  "seed": 42,
  "group_size": 6,
  "max_new_tokens": 120,
  "sampler": {
    "temperature": 0.9,
    "top_p": 0.92,
    "top_k": 120,
    "jitter": {"temperature": 0.05, "top_p": 0.03}
  },
  "reward": {
    "preset": "freeverse",
    "presets_file": "configs/reward_presets.json",
    "weights_override": {
      "cad": 0.35,
      "sup": 0.25,
      "dis": 0.15,
      "cor": 0.15,
      "arc": 0.1,
      "kl": 0.05,
      "safety": 1.0,
      "format": 0.25
    },
    "enable_rhyme": false,
    "enable_meter": false
  },
  "prompts": [
    "Write a free-verse poem about tidal flats.",
    "Compose a sonnet about the first frost."
  ],
  "prompts_file": null,
  "out_dir": "data/grpo_runs/qwen3_1p7b_freeverse_debug",
  "steps": 1
  ,
  "train": {
    "steps": 50,
    "lr": 0.05,
    "l2": 0.0001,
    "clipnorm": 5.0,
    "save_every": 10,
    "amp": false,
    "amp_dtype": "bf16",
    "kl_coef": 0.0,
    "grad_accum": 1
  }
}
