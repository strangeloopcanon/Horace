{
  "model": "gpt2",
  "backend": "hf",
  "seed": 42,
  "group_size": 4,
  "max_new_tokens": 64,
  "sampler": {
    "temperature": 0.9,
    "top_p": 0.92,
    "top_k": 120,
    "jitter": {"temperature": 0.05, "top_p": 0.03}
  },
  "reward": {
    "preset": "freeverse",
    "presets_file": "configs/reward_presets.json",
    "enable_rhyme": false,
    "enable_meter": false,
    "enable_grammar": false
  },
  "prompts": [
    "Write a free-verse poem about tidal flats."
  ],
  "out_dir": "data/grpo_runs/_placeholder",
  "train": {
    "steps": 2,
    "lr": 5e-6,
    "wd": 0.0,
    "clip": 0.2,
    "grad_accum": 1,
    "save_every": 1,
    "amp": false,
    "amp_dtype": "bf16",
    "kl_coef": 0.0
  }
}

